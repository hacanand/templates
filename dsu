int find(int u)
{
    if(u == parent[u])
        return u;
    
    else
        return parent[u] = find(parent[u]);
}

void dsu (int u, int v)
{
    u = find(u);
    v = find(v);
    
    if(u == v)
        return;
    
    else
    {
        if(size[u] > size[v])
        {
            parent[v] = u;
            size[u] += size[v];
        }
        
        else
        {
            parent[u] = v;
            size[v] += size[u];
        }
    
    }
}
